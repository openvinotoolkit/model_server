ARG BASE_IMAGE=ubuntu:20.04
ARG FINAL_IMAGE=ubuntu:20.04

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
FROM $BASE_IMAGE as base_build

RUN groupadd --gid 5000 ovms && \
    useradd --home-dir /home/ovms --create-home --uid 5000 --gid 5000 --shell /bin/bash --skel /dev/null ovms

RUN apt-get update && apt-get install -y unzip curl && \
    curl -LO https://github.com/protocolbuffers/protobuf/releases/download/v3.18.0/protoc-3.18.0-linux-x86_64.zip && \
    unzip protoc-3.18.0-linux-x86_64.zip -d /opt/protoc

ENV PATH=$PATH:/opt/protoc

RUN mkdir /ovmsclient
COPY lib /ovmsclient/lib

RUN apt-get install -y python3-pip make && \
    cd /ovmsclient/lib && make build

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
FROM $FINAL_IMAGE as final_build

ENV OVMSCLIENT_DIR="/home/ovmsclient"

RUN groupadd --gid 5001 ovmsclient && \
    useradd --home-dir ${OVMSCLIENT_DIR} --create-home --uid 5001 --gid 5001 --shell /bin/bash --skel /dev/null ovmsclient

COPY --from=base_build /ovmsclient/lib/dist/ovmsclient-0.1-py3-none-any.whl ${OVMSCLIENT_DIR}/ovmsclient-0.1-py3-none-any.whl
COPY samples ${OVMSCLIENT_DIR}/samples

RUN apt-get update && apt-get install -y python3-pip && apt-get clean && rm -rf /var/lib/apt/lists/* && rm -rf /tmp/*

USER ovmsclient

ENV PATH=${PATH}:${OVMSCLIENT_DIR}/.local/bin
RUN pip3 install --user ${OVMSCLIENT_DIR}/ovmsclient-0.1-py3-none-any.whl && \
    rm  ${OVMSCLIENT_DIR}/ovmsclient-0.1-py3-none-any.whl

ENV PS1="$(whoami)@$(cat /etc/hostname):$(pwd)\$ "
WORKDIR ${OVMSCLIENT_DIR}